<!doctype html>
<html lang="en">
  <head>

    {{> header}}

  </head>
  <body>

<div class="container">
  
  {{> menu}}

  <img src="https://www.houghton.edu/wp-content/uploads/2019/02/vocal.jpg" class="img-fluid" alt="Responsive image">

  <form>
      <div class="form-group mt-3">
          <label for="exampleInputEmail1">Search Teacher By Name</label>
          <div class="input-group">
              <input type="text" name="teacherName" class="mr-3 form-control" placeholder="Enter name">
              <button type="submit" class="btn btn-primary">Search</button>
          </div>
      </div>
  </form>

  <form>
      <div class="form-group">
          <label for="exampleInputEmail1">Search Teacher By Genre</label>
          <div class="input-group">
              <input type="text" name="genre" class="mr-3 form-control" placeholder="Enter genre">
              <button type="submit" class="btn btn-primary">Search</button>
          </div>
      </div>
  </form>

{{#teachers}}
  <div class="card mx-auto mt-5 mb-3" style="max-width: 640px;">
    <div class="row no-gutters">
      <div class="col-md-5">
        <img src="{{imageurl}}" class="card-img" alt="Picture Of Teacher">
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <h5 class="card-title">{{username}}</h5>
          <p class="card-text">{{bio}}</p>
          <div>
              <span>Years of Experience:</span>
              <span class="card-text"><small class="text-muted">{{yearsExperience}}</small></span>
          </div>
          <div>
              <span>Location:</span>
              <span class="card-text"><small class="text-muted">{{location}}</small></span>
          </div>
          <div>
           <a href="/teacher-profile/{{id}}"><button type="submit" class="mt-3 btn btn-primary">View Profile</button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/teachers}}

</div>

    {{> footer}}

  </body>
</html>
