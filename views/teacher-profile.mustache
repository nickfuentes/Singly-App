<!doctype html>
<html lang="en">
  <head>

    {{> header}}

  </head>
  <body>

<div class="container">
  
  {{> menu}}

{{#teacher}}
  <div class="card mx-auto mt-5 mb-3" style="max-width: 940px;">
    <div class="row no-gutters">
      <div class="col-md-5">
        <img src="{{imageurl}}" class="card-img" alt="Picture Of Teacher">
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <h5 class="card-title">{{username}}</h5>
          <p class="card-text">{{bio}}</p>
          <div>
              <span>Years of Experience:</span>
              <span class="card-text"><small class="text-muted">{{yearsExperience}}</small></span>
          </div>
          <div>
              <span>Location:</span>
              <span class="card-text"><small class="text-muted">{{location}}</small></span>
          </div>
          <div>
             <a href="/payment"><button type="submit" class="mt-3 btn btn-primary">Purchase Lessons</button></a>
             <a href='/video-conference/roomId={{roomId}}&userid={{userId}}'><button type="submit" class="mt-3 btn btn-primary">Train With Teacher</button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/teacher}}

</div>

    {{> footer}}

  </body>
</html>
