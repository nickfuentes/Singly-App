<!doctype html>
<html lang="en">
  <head>

    {{> header}}

  </head>
  <body>

<div class="container">
 
    {{> menu}}

     <img src="https://www.carosello3000.com/images/apres-ski-livigno/apres-ski-livigno.jpg" class="img-fluid" alt="Responsive image">

    <h1 class="mt-3">Student Login Page</h1>

    {{#message}}
            <div class="alert alert-danger" role="alert">
                {{message}}
            </div>
    {{/message}}

    <form action="/login" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">User Name</label>
            <input type="text" name="username" class="form-control" placeholder="Enter User Name">
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter Password">
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

<div class="text-center mt-3">
    <h2>Teacher Log In</h2>
    <p class="mt-3">If you want to log in as a teacher, please log in by clicking <a href="/login-teacher">Teacher Login.</a></p>
    <p>Please note if you don't have a teacher account you can create one on the register page.</p>
</div>
        
    </form>
</div>

   {{> footer}}
   
  </body>
</html>
